<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/tools"
    android:background="?android:attr/windowBackground"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.melnykov.fab.ObservableScrollView
        android:id="@+id/details_scroll"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/icon_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center_horizontal"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">
                    <ImageView
                        android:layout_height="75dp"
                        android:layout_width="75dp"
                        android:id="@+id/icon"
                        android:scaleType="centerCrop" />
                    <com.pnikosis.materialishprogress.ProgressWheel
                        android:visibility="gone"
                        android:id="@+id/progress"
                        android:layout_height="75dp"
                        android:layout_width="75dp"
                        app:barColor="#5588FF"
                        app:progressIndeterminate="true" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/icon_progress"
                    android:layout_marginLeft="8dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignBottom="@+id/icon_progress"
                    android:gravity="center_vertical"
                    android:layout_toLeftOf="@+id/price"
                    android:layout_toStartOf="@+id/price"
                    android:layout_marginRight="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/title"
                        android:textColor="@color/grey_black_1000"
                        android:padding="2dp"
                        android:singleLine="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:id="@+id/version"
                        android:textColor="@color/grey_500"
                        android:padding="2dp"
                        android:singleLine="true"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/price"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="8dp" />
            </RelativeLayout>

            <TextView
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/changelog_label"
                android:textColor="@color/grey_black_1000"
                android:text="@string/changelog_title"
                android:padding="2dp"
                android:singleLine="true"
                android:layout_marginTop="12dp" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/icon"
                android:layout_alignParentLeft="true"
                android:padding="14dp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="12dp"
                android:id="@+id/view">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/changelog"
                        android:textColor="@color/grey_800"
                        android:padding="2dp"
                        android:singleLine="true" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <HorizontalScrollView
                android:layout_marginTop="12dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/screenshots" />
            </HorizontalScrollView>

            <TextView
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/desc_label"
                android:textColor="@color/grey_black_1000"
                android:text="@string/description_title"
                android:padding="2dp"
                android:singleLine="true"
                android:layout_marginTop="12dp" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp"
                android:layout_marginTop="12dp">

                <LinearLayout
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/description"
                        android:textColor="@color/grey_800"
                        android:padding="2dp"
                        android:singleLine="true"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </com.melnykov.fab.ObservableScrollView>
</FrameLayout>